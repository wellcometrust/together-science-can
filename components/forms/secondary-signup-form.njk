{# This form is generated by dotmailer and modified by us #}
<form
  class="form"
  name="signup"
  id="secondary-signup"
  action="https://r1-t.trackedlink.net/signup.ashx"
  method="post">

  <input type="hidden" name="addressbookid" value="10680159">
  <input type="hidden" name="userid" value="126919">
  {# return URL is TBC #}
  <input type="hidden" name="ReturnURL" value="https://togethersciencecan.org/thank-you/index.html">

  <div class="form__element form__element--long">
    <label for="ss-first-name">First name</label>
    <input id="ss-first-name" type="text" name="cd_FIRSTNAME" required />
  </div>

  <div class="form__element form__element--long">
    <label for="ss-email">Email address</label>
    <input id="ss-email" type="email" name="Email" required />
  </div>

  <div class="form__element form__element--long">
    <label for="ss-country">Country of residence</label>
    <select id="ss-country" name="cd_COUNTRY" required>
      {% include "patterns/form/countries.njk" %}
    </select>
  </div>

  <div class="form__legal">
    <input id="ss-newsletter-promo-checkbox" class="checkbox" type="checkbox" name="legal-consent" required>
    <label for="ss-newsletter-promo-checkbox" class="form__legal__label">I agree to receive emails from Together Science can*</label>
    <p class="form__legal__footnote">
      *We use a third party to deliver our emails; you can unsubscribe at any time. For information about how we handle your data, please read our <a href="https://wellcome.ac.uk/about-us/terms-use#privacy" target="_blank" rel="noopener noreferrer">privacy policy</a>.
    </p>
  </div>

  <div class="form__element">
    <input class="button button--green button--fullwidth button--expanded-ls" type="Submit" name="Submit" value="Join now" aria-label="Join now">
  </div>

</form>
