{# This form is generated by dotmailer and modified by us #}
<form
  class="form"
  name="signup"
  id="primary-signup"
  action="https://r1-t.trackedlink.net/signup.ashx"
  method="post">

  <input type="hidden" name="addressbookid" value="{{ address_book_id }}">
  <input type="hidden" name="userid" value="126919">
  {# return URL is TBC #}
  <input type="hidden" name="ReturnURL" value="https://togethersciencecan.org/thank-you">

  <div class="form__element form__element--long">
    <label for="card-first-name">First name</label>
    <input id="card-first-name" type="text" name="cd_FIRSTNAME" required />
    <p class="form__element__error">Please enter your first name</p>
  </div>

  <div class="form__element form__element--long">
    <label for="card-email">Email address</label>
    <input id="card-email" type="email" name="Email" required />
    <p class="form__element__error">Please enter a valid email address</p>
  </div>

  <div class="form__element form__element--long">
    <label for="card-country">Country of residence</label>
    <select id="card-country" name="cd_COUNTRY" required>
      {% include "patterns/form/countries.njk" %}
    </select>
    <p class="form__element__error">Please select your country of residence</p>
  </div>

  <div class="form__element">
    <input class="button button--yellow button--fullwidth button--expanded-ls" type="Submit" name="Submit" value="Join now" aria-label="Join now">
  </div>

</form>
<iframe class="ajax-enabler" src="" aria-hidden="true"></iframe>
