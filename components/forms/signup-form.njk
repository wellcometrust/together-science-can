{# This form is generated by dotmailer and modified by us #}
<form
  class="form"
  name="signup"
  id="primary-signup"
  action="https://r1-t.trackedlink.net/signup.ashx"
  method="post">

  <input type="hidden" name="addressbookid" value="10680159">
  <input type="hidden" name="userid" value="126919">
  {# return URL is TBC #}
  <input type="hidden" name="ReturnURL" value="https://togethersciencecan.org/thank-you/index.html">

  <div class="form__element form__element--long">
    <label for="ps-first-name">First name</label>
    <input id="ps-first-name" type="text" name="cd_FIRSTNAME" required />
    <p class="form__element__error">Please enter your first name</p>
  </div>

  <div class="form__element form__element--long">
    <label for="ps-email">Email address</label>
    <input id="ps-email" type="email" name="Email" required />
    <p class="form__element__error">Please enter a valid email address</p>
  </div>

  <div class="form__element form__element--long">
    <label for="ps-country">Country of residence</label>
    <select id="ps-country" name="cd_COUNTRY" required>
      {% include "patterns/form/countries.njk" %}
    </select>
    <p class="form__element__error">Please select your country of residence</p>
  </div>
    <p class="form__footer form__footer-privacy">
        {% block footer %}
          {{ signup.footer | safe }}
        {% endblock %}
    </p>
  <div class="form__element">
    <input class="button button--yellow button--fullwidth button--expanded-ls" type="Submit" name="Submit" value="Join now" aria-label="Join now">
  </div>

</form>
